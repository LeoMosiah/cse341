<!DOCTYPE html>
<html>

<head>
  <% include ../includes/header.ejs %>
</head>
<style>
  .card {
    text-align: center;
  }
  .card--image {
    margin-left: auto;
    margin-right: auto;
    max-height: 175px;
    max-width: 200px;
    width: auto;
    height: auto;
  }
</style>

<body>
  <% include ../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1>
          <%= title %>
        </h1>
        <p>This is the placeholder for Team Activity 03</p>
      </div>
    </div>
    <div class="container">
      <% for(let i=0; i<data.length; i++) {%>
        <div class="card">
          <img src="<%= data[i].imageUrl %>" class="card--image">
          <div class="card-body">
             <h5 class="card---title">
                <%= data[i].name %>
             </h5>
             <h6>
                <%= data[i].price %>
             </h6>
             <p class="card--text">
                <%= data[i].description %>
             </p>
          </div>
       </div>

      <% } %>
    </div>


</body>

</html>